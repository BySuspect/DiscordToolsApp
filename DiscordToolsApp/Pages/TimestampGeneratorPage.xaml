<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DiscordToolsApp.Pages.TimestampGeneratorPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:adscontrol="clr-namespace:MarcTron.Plugin.Controls;assembly=Plugin.MtAdmob"
    xmlns:custom="clr-namespace:DiscordToolsApp.CustomItems"
    xmlns:helpers="clr-namespace:DiscordToolsApp.Helpers"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    Title="Timestamp Generator"
    xct:StatusBarEffect.Color="{x:Static helpers:ThemeColors.StatusBarColor}"
    xct:StatusBarEffect.Style="{x:Static helpers:ThemeColors.StatusBarStyle}"
    BackgroundColor="{x:Static helpers:ThemeColors.BackColor}"
    BackgroundImageSource="{x:Static helpers:ThemeColors.backgroundImg}"
    NavigationPage.HasBackButton="True">
    <ContentPage.ToolbarItems>
        <ToolbarItem Clicked="FeedbackButton_Clicked" IconImageSource="feedback32px.png" />
        <ToolbarItem Clicked="DiscordButton_Clicked" IconImageSource="discordlogo.png" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Grid VerticalOptions="FillAndExpand">
                <StackLayout Margin="10">
                    <!--#region Format And Timeframe-->
                    <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                        <Frame
                            Padding="0,5"
                            BackgroundColor="{x:Static helpers:ThemeColors.BorderBackColor}"
                            BorderColor="{x:Static helpers:ThemeColors.BorderColor}"
                            CornerRadius="15">
                            <custom:BorderlessPicker
                                x:Name="pickerFormat"
                                Title="Format"
                                FontSize="Small"
                                HorizontalTextAlignment="Center"
                                SelectedIndexChanged="pickerFormat_SelectedIndexChanged"
                                TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                TitleColor="{x:Static helpers:ThemeColors.TextColor}"
                                VerticalTextAlignment="Center"
                                WidthRequest="150">
                                <Picker.Items>
                                    <x:String>Relative</x:String>
                                    <x:String>Time</x:String>
                                    <x:String>Long Time</x:String>
                                    <x:String>Date</x:String>
                                    <x:String>Long Date</x:String>
                                    <x:String>Date Time</x:String>
                                    <x:String>Date Weekday</x:String>
                                </Picker.Items>
                            </custom:BorderlessPicker>
                        </Frame>
                        <Frame
                            Padding="0,5"
                            BackgroundColor="{x:Static helpers:ThemeColors.BorderBackColor}"
                            BorderColor="{x:Static helpers:ThemeColors.BorderColor}"
                            CornerRadius="15">
                            <custom:BorderlessPicker
                                x:Name="pickerTimeFrame"
                                Title="TimeFrame"
                                FontSize="Small"
                                HorizontalTextAlignment="Center"
                                SelectedIndexChanged="pickerTimeFrame_SelectedIndexChanged"
                                TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                TitleColor="{x:Static helpers:ThemeColors.TextColor}"
                                VerticalTextAlignment="Center"
                                WidthRequest="150">
                                <Picker.Items>
                                    <x:String>Timer</x:String>
                                    <x:String>Date</x:String>
                                </Picker.Items>
                            </custom:BorderlessPicker>
                        </Frame>
                    </StackLayout>
                    <!--#endregion-->

                    <!--#region Timer Picker-->
                    <Grid
                        x:Name="timerPickerLayout"
                        Margin="0,20,0,5"
                        HorizontalOptions="Center"
                        IsVisible="false"
                        WidthRequest="350">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Frame
                            Grid.Row="0"
                            Padding="1,1"
                            BackgroundColor="{x:Static helpers:ThemeColors.BorderBackColor}"
                            BorderColor="{x:Static helpers:ThemeColors.BorderColor}"
                            CornerRadius="15"
                            HeightRequest="35"
                            VerticalOptions="CenterAndExpand">
                            <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                                <Frame
                                    Padding="0"
                                    xct:CornerRadiusEffect.CornerRadius="15,0,15,0"
                                    xct:TouchEffect.NativeAnimation="true"
                                    xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                    xct:TouchEffect.PressedAnimationDuration="500"
                                    xct:TouchEffect.PressedOpacity="0.6"
                                    xct:TouchEffect.PressedScale="0.98"
                                    BackgroundColor="Transparent"
                                    HorizontalOptions="FillAndExpand">
                                    <Grid>
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="Small"
                                            HorizontalOptions="Center"
                                            Text="-"
                                            TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                            VerticalTextAlignment="Center" />
                                    </Grid>
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="extractWeeksTapped" />
                                    </Frame.GestureRecognizers>
                                </Frame>
                                <Label
                                    xct:TouchEffect.NativeAnimation="true"
                                    xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                    xct:TouchEffect.PressedAnimationDuration="500"
                                    xct:TouchEffect.PressedOpacity="0.6"
                                    xct:TouchEffect.PressedScale="0.98"
                                    FontSize="Small"
                                    HorizontalOptions="FillAndExpand"
                                    HorizontalTextAlignment="Center"
                                    TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                    VerticalOptions="Fill"
                                    VerticalTextAlignment="Center">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding Weeks}" />
                                            <Span Text=" Weeks" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="addWeeksTapped" />
                                    </Label.GestureRecognizers>
                                </Label>
                                <Frame
                                    Padding="0"
                                    xct:CornerRadiusEffect.CornerRadius="0,15,0,15"
                                    xct:TouchEffect.NativeAnimation="true"
                                    xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                    xct:TouchEffect.PressedAnimationDuration="500"
                                    xct:TouchEffect.PressedOpacity="0.6"
                                    xct:TouchEffect.PressedScale="0.98"
                                    BackgroundColor="Transparent"
                                    HorizontalOptions="FillAndExpand">
                                    <Grid>
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="Small"
                                            HorizontalOptions="Center"
                                            Text="+"
                                            TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                            VerticalTextAlignment="Center" />
                                    </Grid>
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="addWeeksTapped" />
                                    </Frame.GestureRecognizers>
                                </Frame>
                            </StackLayout>
                        </Frame>
                        <Frame
                            Grid.Row="1"
                            Padding="1,1"
                            BackgroundColor="{x:Static helpers:ThemeColors.BorderBackColor}"
                            BorderColor="{x:Static helpers:ThemeColors.BorderColor}"
                            CornerRadius="15"
                            VerticalOptions="CenterAndExpand">
                            <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                                <Frame
                                    Padding="0"
                                    xct:CornerRadiusEffect.CornerRadius="15,0,15,0"
                                    xct:TouchEffect.NativeAnimation="true"
                                    xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                    xct:TouchEffect.PressedAnimationDuration="500"
                                    xct:TouchEffect.PressedOpacity="0.6"
                                    xct:TouchEffect.PressedScale="0.98"
                                    BackgroundColor="Transparent"
                                    HorizontalOptions="FillAndExpand">
                                    <Grid>
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="Small"
                                            HorizontalOptions="Center"
                                            Text="-"
                                            TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                            VerticalTextAlignment="Center" />
                                    </Grid>
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="extractDaysTapped" />
                                    </Frame.GestureRecognizers>
                                </Frame>
                                <Label
                                    xct:TouchEffect.NativeAnimation="true"
                                    xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                    xct:TouchEffect.PressedAnimationDuration="500"
                                    xct:TouchEffect.PressedOpacity="0.6"
                                    xct:TouchEffect.PressedScale="0.98"
                                    FontSize="Small"
                                    HorizontalOptions="FillAndExpand"
                                    HorizontalTextAlignment="Center"
                                    TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                    VerticalOptions="Fill"
                                    VerticalTextAlignment="Center">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding Days}" />
                                            <Span Text=" Days" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="addDaysTapped" />
                                    </Label.GestureRecognizers>
                                </Label>
                                <Frame
                                    Padding="0"
                                    xct:CornerRadiusEffect.CornerRadius="0,15,0,15"
                                    xct:TouchEffect.NativeAnimation="true"
                                    xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                    xct:TouchEffect.PressedAnimationDuration="500"
                                    xct:TouchEffect.PressedOpacity="0.6"
                                    xct:TouchEffect.PressedScale="0.98"
                                    BackgroundColor="Transparent"
                                    HorizontalOptions="FillAndExpand">
                                    <Grid>
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="Small"
                                            HorizontalOptions="Center"
                                            Text="+"
                                            TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                            VerticalTextAlignment="Center" />
                                    </Grid>
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="addDaysTapped" />
                                    </Frame.GestureRecognizers>
                                </Frame>
                            </StackLayout>
                        </Frame>
                        <Frame
                            Grid.Row="2"
                            Padding="1,1"
                            BackgroundColor="{x:Static helpers:ThemeColors.BorderBackColor}"
                            BorderColor="{x:Static helpers:ThemeColors.BorderColor}"
                            CornerRadius="15"
                            VerticalOptions="CenterAndExpand">
                            <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                                <Frame
                                    Padding="0"
                                    xct:CornerRadiusEffect.CornerRadius="15,0,15,0"
                                    xct:TouchEffect.NativeAnimation="true"
                                    xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                    xct:TouchEffect.PressedAnimationDuration="500"
                                    xct:TouchEffect.PressedOpacity="0.6"
                                    xct:TouchEffect.PressedScale="0.98"
                                    BackgroundColor="Transparent"
                                    HorizontalOptions="FillAndExpand">
                                    <Grid>
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="Small"
                                            HorizontalOptions="Center"
                                            Text="-"
                                            TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                            VerticalTextAlignment="Center" />
                                    </Grid>
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="extractHoursTapped" />
                                    </Frame.GestureRecognizers>
                                </Frame>
                                <Label
                                    xct:TouchEffect.NativeAnimation="true"
                                    xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                    xct:TouchEffect.PressedAnimationDuration="500"
                                    xct:TouchEffect.PressedOpacity="0.6"
                                    xct:TouchEffect.PressedScale="0.98"
                                    FontSize="Small"
                                    HorizontalOptions="FillAndExpand"
                                    HorizontalTextAlignment="Center"
                                    TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                    VerticalOptions="Fill"
                                    VerticalTextAlignment="Center">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding Hours}" />
                                            <Span Text=" Hours" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="addHoursTapped" />
                                    </Label.GestureRecognizers>
                                </Label>
                                <Frame
                                    Padding="0"
                                    xct:CornerRadiusEffect.CornerRadius="0,15,0,15"
                                    xct:TouchEffect.NativeAnimation="true"
                                    xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                    xct:TouchEffect.PressedAnimationDuration="500"
                                    xct:TouchEffect.PressedOpacity="0.6"
                                    xct:TouchEffect.PressedScale="0.98"
                                    BackgroundColor="Transparent"
                                    HorizontalOptions="FillAndExpand">
                                    <Grid>
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="Small"
                                            HorizontalOptions="Center"
                                            Text="+"
                                            TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                            VerticalTextAlignment="Center" />
                                    </Grid>
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="addHoursTapped" />
                                    </Frame.GestureRecognizers>
                                </Frame>
                            </StackLayout>
                        </Frame>
                        <Frame
                            Grid.Row="3"
                            Padding="1,1"
                            BackgroundColor="{x:Static helpers:ThemeColors.BorderBackColor}"
                            BorderColor="{x:Static helpers:ThemeColors.BorderColor}"
                            CornerRadius="15"
                            VerticalOptions="CenterAndExpand">
                            <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                                <Frame
                                    Padding="0"
                                    xct:CornerRadiusEffect.CornerRadius="15,0,15,0"
                                    xct:TouchEffect.NativeAnimation="true"
                                    xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                    xct:TouchEffect.PressedAnimationDuration="500"
                                    xct:TouchEffect.PressedOpacity="0.6"
                                    xct:TouchEffect.PressedScale="0.98"
                                    BackgroundColor="Transparent"
                                    HorizontalOptions="FillAndExpand">
                                    <Grid>
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="Small"
                                            HorizontalOptions="Center"
                                            Text="-"
                                            TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                            VerticalTextAlignment="Center" />
                                    </Grid>
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="extractMinutesTapped" />
                                    </Frame.GestureRecognizers>
                                </Frame>
                                <Label
                                    xct:TouchEffect.NativeAnimation="true"
                                    xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                    xct:TouchEffect.PressedAnimationDuration="500"
                                    xct:TouchEffect.PressedOpacity="0.6"
                                    xct:TouchEffect.PressedScale="0.98"
                                    FontSize="Small"
                                    HorizontalOptions="FillAndExpand"
                                    HorizontalTextAlignment="Center"
                                    TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                    VerticalOptions="Fill"
                                    VerticalTextAlignment="Center">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding Minutes}" />
                                            <Span Text=" Minutes" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="addMinutesTapped" />
                                    </Label.GestureRecognizers>
                                </Label>
                                <Frame
                                    Padding="0"
                                    xct:CornerRadiusEffect.CornerRadius="0,15,0,15"
                                    xct:TouchEffect.NativeAnimation="true"
                                    xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                    xct:TouchEffect.PressedAnimationDuration="500"
                                    xct:TouchEffect.PressedOpacity="0.6"
                                    xct:TouchEffect.PressedScale="0.98"
                                    BackgroundColor="Transparent"
                                    HorizontalOptions="FillAndExpand">
                                    <Grid>
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="Small"
                                            HorizontalOptions="Center"
                                            Text="+"
                                            TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                            VerticalTextAlignment="Center" />
                                    </Grid>
                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="addMinutesTapped" />
                                    </Frame.GestureRecognizers>
                                </Frame>
                            </StackLayout>
                        </Frame>
                    </Grid>
                    <!--#endregion-->

                    <!--#region DateTime Picker-->
                    <xct:UniformGrid x:Name="timeFrameDateTimePicker">
                        <Frame
                            Margin="10"
                            Padding="10"
                            BackgroundColor="{x:Static helpers:ThemeColors.BorderBackColor}"
                            BorderColor="{x:Static helpers:ThemeColors.BorderColor}"
                            CornerRadius="15"
                            HorizontalOptions="Center">
                            <Label
                                FontSize="Small"
                                HorizontalOptions="Center"
                                TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                VerticalTextAlignment="Center">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="08.06.2023" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </Frame>
                        <Frame
                            Margin="10"
                            Padding="10"
                            BackgroundColor="{x:Static helpers:ThemeColors.BorderBackColor}"
                            BorderColor="{x:Static helpers:ThemeColors.BorderColor}"
                            CornerRadius="15"
                            HorizontalOptions="Center">
                            <Label
                                FontSize="Small"
                                HorizontalOptions="Center"
                                TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                VerticalTextAlignment="Center">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="12.25.00 AM" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </Frame>
                    </xct:UniformGrid>
