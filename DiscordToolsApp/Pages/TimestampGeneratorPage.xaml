<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DiscordToolsApp.Pages.TimestampGeneratorPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:adscontrol="clr-namespace:MarcTron.Plugin.Controls;assembly=Plugin.MtAdmob"
    xmlns:custom="clr-namespace:DiscordToolsApp.CustomItems"
    xmlns:helpers="clr-namespace:DiscordToolsApp.Helpers"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    xmlns:xctv="clr-namespace:Xamarin.CommunityToolkit.UI.Views;assembly=Xamarin.CommunityToolkit"
    Title="Timestamp Generator"
    xct:StatusBarEffect.Color="{x:Static helpers:ThemeColors.StatusBarColor}"
    xct:StatusBarEffect.Style="{x:Static helpers:ThemeColors.StatusBarStyle}"
    BackgroundColor="{x:Static helpers:ThemeColors.BackColor}"
    BackgroundImageSource="{x:Static helpers:ThemeColors.backgroundImg}"
    NavigationPage.HasBackButton="True">
    <ContentPage.ToolbarItems>
        <ToolbarItem Clicked="FeedbackButton_Clicked" IconImageSource="feedback32px.png" />
        <ToolbarItem Clicked="DiscordButton_Clicked" IconImageSource="discordlogo.png" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Grid VerticalOptions="FillAndExpand">
                <StackLayout Margin="10">
                    <Frame
                        Padding="10"
                        BackgroundColor="Transparent"
                        BorderColor="{x:Static helpers:ThemeColors.BorderColor}"
                        CornerRadius="15"
                        HorizontalOptions="Center">
                        <StackLayout HeightRequest="250" VerticalOptions="FillAndExpand">
                            <xctv:TabView
                                x:Name="mainTabView"
                                SelectedIndex="0"
                                SelectionChanged="mainTabView_SelectionChanged"
                                TabIndicatorColor="{x:Static helpers:ThemeColors.BorderColor}"
                                TabStripBackgroundColor="{x:Static helpers:ThemeColors.BorderBackColor}"
                                VerticalOptions="FillAndExpand">
                                <xctv:TabViewItem FontSize="14" Text="Timer">
                                    <StackLayout>

                                        <!--#region Timer Picker-->
                                        <Grid
                                            x:Name="timerPickerLayout"
                                            Margin="0,20,0,5"
                                            HorizontalOptions="Center"
                                            IsVisible="true"
                                            WidthRequest="350">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Frame
                                                Grid.Row="0"
                                                Padding="1,1"
                                                BackgroundColor="{x:Static helpers:ThemeColors.BorderBackColor}"
                                                BorderColor="{x:Static helpers:ThemeColors.BorderColor}"
                                                CornerRadius="15"
                                                HeightRequest="35"
                                                VerticalOptions="CenterAndExpand">
                                                <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                                                    <Frame
                                                        Padding="0"
                                                        xct:CornerRadiusEffect.CornerRadius="15,0,15,0"
                                                        xct:TouchEffect.NativeAnimation="true"
                                                        xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                                        xct:TouchEffect.PressedAnimationDuration="500"
                                                        xct:TouchEffect.PressedOpacity="0.6"
                                                        xct:TouchEffect.PressedScale="0.98"
                                                        BackgroundColor="Transparent"
                                                        HorizontalOptions="FillAndExpand">
                                                        <Grid>
                                                            <Label
                                                                FontAttributes="Bold"
                                                                FontSize="Small"
                                                                HorizontalOptions="Center"
                                                                Text="-"
                                                                TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                                                VerticalTextAlignment="Center" />
                                                        </Grid>
                                                        <Frame.GestureRecognizers>
                                                            <TapGestureRecognizer Tapped="extractWeeksTapped" />
                                                        </Frame.GestureRecognizers>
                                                    </Frame>
                                                    <Label
                                                        xct:TouchEffect.NativeAnimation="true"
                                                        xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                                        xct:TouchEffect.PressedAnimationDuration="500"
                                                        xct:TouchEffect.PressedOpacity="0.6"
                                                        xct:TouchEffect.PressedScale="0.98"
                                                        FontSize="Small"
                                                        HorizontalOptions="FillAndExpand"
                                                        HorizontalTextAlignment="Center"
                                                        TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                                        VerticalOptions="Fill"
                                                        VerticalTextAlignment="Center">
                                                        <Label.FormattedText>
                                                            <FormattedString>
                                                                <Span Text="{Binding Weeks}" />
                                                                <Span Text=" Weeks" />
                                                            </FormattedString>
                                                        </Label.FormattedText>
                                                        <Label.GestureRecognizers>
                                                            <TapGestureRecognizer Tapped="addWeeksTapped" />
                                                        </Label.GestureRecognizers>
                                                    </Label>
                                                    <Frame
                                                        Padding="0"
                                                        xct:CornerRadiusEffect.CornerRadius="0,15,0,15"
                                                        xct:TouchEffect.NativeAnimation="true"
                                                        xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                                        xct:TouchEffect.PressedAnimationDuration="500"
                                                        xct:TouchEffect.PressedOpacity="0.6"
                                                        xct:TouchEffect.PressedScale="0.98"
                                                        BackgroundColor="Transparent"
                                                        HorizontalOptions="FillAndExpand">
                                                        <Grid>
                                                            <Label
                                                                FontAttributes="Bold"
                                                                FontSize="Small"
                                                                HorizontalOptions="Center"
                                                                Text="+"
                                                                TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                                                VerticalTextAlignment="Center" />
                                                        </Grid>
                                                        <Frame.GestureRecognizers>
                                                            <TapGestureRecognizer Tapped="addWeeksTapped" />
                                                        </Frame.GestureRecognizers>
                                                    </Frame>
                                                </StackLayout>
                                            </Frame>
                                            <Frame
                                                Grid.Row="1"
                                                Padding="1,1"
                                                BackgroundColor="{x:Static helpers:ThemeColors.BorderBackColor}"
                                                BorderColor="{x:Static helpers:ThemeColors.BorderColor}"
                                                CornerRadius="15"
                                                VerticalOptions="CenterAndExpand">
                                                <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                                                    <Frame
                                                        Padding="0"
                                                        xct:CornerRadiusEffect.CornerRadius="15,0,15,0"
                                                        xct:TouchEffect.NativeAnimation="true"
                                                        xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                                        xct:TouchEffect.PressedAnimationDuration="500"
                                                        xct:TouchEffect.PressedOpacity="0.6"
                                                        xct:TouchEffect.PressedScale="0.98"
                                                        BackgroundColor="Transparent"
                                                        HorizontalOptions="FillAndExpand">
                                                        <Grid>
                                                            <Label
                                                                FontAttributes="Bold"
                                                                FontSize="Small"
                                                                HorizontalOptions="Center"
                                                                Text="-"
                                                                TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                                                VerticalTextAlignment="Center" />
                                                        </Grid>
                                                        <Frame.GestureRecognizers>
                                                            <TapGestureRecognizer Tapped="extractDaysTapped" />
                                                        </Frame.GestureRecognizers>
                                                    </Frame>
                                                    <Label
                                                        xct:TouchEffect.NativeAnimation="true"
                                                        xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                                        xct:TouchEffect.PressedAnimationDuration="500"
                                                        xct:TouchEffect.PressedOpacity="0.6"
                                                        xct:TouchEffect.PressedScale="0.98"
                                                        FontSize="Small"
                                                        HorizontalOptions="FillAndExpand"
                                                        HorizontalTextAlignment="Center"
                                                        TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                                        VerticalOptions="Fill"
                                                        VerticalTextAlignment="Center">
                                                        <Label.FormattedText>
                                                            <FormattedString>
                                                                <Span Text="{Binding Days}" />
                                                                <Span Text=" Days" />
                                                            </FormattedString>
                                                        </Label.FormattedText>
                                                        <Label.GestureRecognizers>
                                                            <TapGestureRecognizer Tapped="addDaysTapped" />
                                                        </Label.GestureRecognizers>
                                                    </Label>
                                                    <Frame
                                                        Padding="0"
                                                        xct:CornerRadiusEffect.CornerRadius="0,15,0,15"
                                                        xct:TouchEffect.NativeAnimation="true"
                                                        xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                                        xct:TouchEffect.PressedAnimationDuration="500"
                                                        xct:TouchEffect.PressedOpacity="0.6"
                                                        xct:TouchEffect.PressedScale="0.98"
                                                        BackgroundColor="Transparent"
                                                        HorizontalOptions="FillAndExpand">
                                                        <Grid>
                                                            <Label
                                                                FontAttributes="Bold"
                                                                FontSize="Small"
                                                                HorizontalOptions="Center"
                                                                Text="+"
                                                                TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                                                VerticalTextAlignment="Center" />
                                                        </Grid>
                                                        <Frame.GestureRecognizers>
                                                            <TapGestureRecognizer Tapped="addDaysTapped" />
                                                        </Frame.GestureRecognizers>
                                                    </Frame>
                                                </StackLayout>
                                            </Frame>
                                            <Frame
                                                Grid.Row="2"
                                                Padding="1,1"
                                                BackgroundColor="{x:Static helpers:ThemeColors.BorderBackColor}"
                                                BorderColor="{x:Static helpers:ThemeColors.BorderColor}"
                                                CornerRadius="15"
                                                VerticalOptions="CenterAndExpand">
                                                <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                                                    <Frame
                                                        Padding="0"
                                                        xct:CornerRadiusEffect.CornerRadius="15,0,15,0"
                                                        xct:TouchEffect.NativeAnimation="true"
                                                        xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                                        xct:TouchEffect.PressedAnimationDuration="500"
                                                        xct:TouchEffect.PressedOpacity="0.6"
                                                        xct:TouchEffect.PressedScale="0.98"
                                                        BackgroundColor="Transparent"
                                                        HorizontalOptions="FillAndExpand">
                                                        <Grid>
                                                            <Label
                                                                FontAttributes="Bold"
                                                                FontSize="Small"
                                                                HorizontalOptions="Center"
                                                                Text="-"
                                                                TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                                                VerticalTextAlignment="Center" />
                                                        </Grid>
                                                        <Frame.GestureRecognizers>
                                                            <TapGestureRecognizer Tapped="extractHoursTapped" />
                                                        </Frame.GestureRecognizers>
                                                    </Frame>
                                                    <Label
                                                        xct:TouchEffect.NativeAnimation="true"
                                                        xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                                        xct:TouchEffect.PressedAnimationDuration="500"
                                                        xct:TouchEffect.PressedOpacity="0.6"
                                                        xct:TouchEffect.PressedScale="0.98"
                                                        FontSize="Small"
                                                        HorizontalOptions="FillAndExpand"
                                                        HorizontalTextAlignment="Center"
                                                        TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                                        VerticalOptions="Fill"
                                                        VerticalTextAlignment="Center">
                                                        <Label.FormattedText>
                                                            <FormattedString>
                                                                <Span Text="{Binding Hours}" />
                                                                <Span Text=" Hours" />
                                                            </FormattedString>
                                                        </Label.FormattedText>
                                                        <Label.GestureRecognizers>
                                                            <TapGestureRecognizer Tapped="addHoursTapped" />
                                                        </Label.GestureRecognizers>
                                                    </Label>
                                                    <Frame
                                                        Padding="0"
                                                        xct:CornerRadiusEffect.CornerRadius="0,15,0,15"
                                                        xct:TouchEffect.NativeAnimation="true"
                                                        xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                                        xct:TouchEffect.PressedAnimationDuration="500"
                                                        xct:TouchEffect.PressedOpacity="0.6"
                                                        xct:TouchEffect.PressedScale="0.98"
                                                        BackgroundColor="Transparent"
                                                        HorizontalOptions="FillAndExpand">
                                                        <Grid>
                                                            <Label
                                                                FontAttributes="Bold"
                                                                FontSize="Small"
                                                                HorizontalOptions="Center"
                                                                Text="+"
                                                                TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                                                VerticalTextAlignment="Center" />
                                                        </Grid>
                                                        <Frame.GestureRecognizers>
                                                            <TapGestureRecognizer Tapped="addHoursTapped" />
                                                        </Frame.GestureRecognizers>
                                                    </Frame>
                                                </StackLayout>
                                            </Frame>
                                            <Frame
                                                Grid.Row="3"
                                                Padding="1,1"
                                                BackgroundColor="{x:Static helpers:ThemeColors.BorderBackColor}"
                                                BorderColor="{x:Static helpers:ThemeColors.BorderColor}"
                                                CornerRadius="15"
                                                VerticalOptions="CenterAndExpand">
                                                <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                                                    <Frame
                                                        Padding="0"
                                                        xct:CornerRadiusEffect.CornerRadius="15,0,15,0"
                                                        xct:TouchEffect.NativeAnimation="true"
                                                        xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                                        xct:TouchEffect.PressedAnimationDuration="500"
                                                        xct:TouchEffect.PressedOpacity="0.6"
                                                        xct:TouchEffect.PressedScale="0.98"
                                                        BackgroundColor="Transparent"
                                                        HorizontalOptions="FillAndExpand">
                                                        <Grid>
                                                            <Label
                                                                FontAttributes="Bold"
                                                                FontSize="Small"
                                                                HorizontalOptions="Center"
                                                                Text="-"
                                                                TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                                                VerticalTextAlignment="Center" />
                                                        </Grid>
                                                        <Frame.GestureRecognizers>
                                                            <TapGestureRecognizer Tapped="extractMinutesTapped" />
                                                        </Frame.GestureRecognizers>
                                                    </Frame>
                                                    <Label
                                                        xct:TouchEffect.NativeAnimation="true"
                                                        xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                                        xct:TouchEffect.PressedAnimationDuration="500"
                                                        xct:TouchEffect.PressedOpacity="0.6"
                                                        xct:TouchEffect.PressedScale="0.98"
                                                        FontSize="Small"
                                                        HorizontalOptions="FillAndExpand"
                                                        HorizontalTextAlignment="Center"
                                                        TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                                        VerticalOptions="Fill"
                                                        VerticalTextAlignment="Center">
                                                        <Label.FormattedText>
                                                            <FormattedString>
                                                                <Span Text="{Binding Minutes}" />
                                                                <Span Text=" Minutes" />
                                                            </FormattedString>
                                                        </Label.FormattedText>
                                                        <Label.GestureRecognizers>
                                                            <TapGestureRecognizer Tapped="addMinutesTapped" />
                                                        </Label.GestureRecognizers>
                                                    </Label>
                                                    <Frame
                                                        Padding="0"
                                                        xct:CornerRadiusEffect.CornerRadius="0,15,0,15"
                                                        xct:TouchEffect.NativeAnimation="true"
                                                        xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                                                        xct:TouchEffect.PressedAnimationDuration="500"
                                                        xct:TouchEffect.PressedOpacity="0.6"
                                                        xct:TouchEffect.PressedScale="0.98"
                                                        BackgroundColor="Transparent"
                                                        HorizontalOptions="FillAndExpand">
                                                        <Grid>
                                                            <Label
                                                                FontAttributes="Bold"
                                                                FontSize="Small"
                                                                HorizontalOptions="Center"
                                                                Text="+"
                                                                TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                                                VerticalTextAlignment="Center" />
                                                        </Grid>
                                                        <Frame.GestureRecognizers>
                                                            <TapGestureRecognizer Tapped="addMinutesTapped" />
                                                        </Frame.GestureRecognizers>
                                                    </Frame>
                                                </StackLayout>
                                            </Frame>
                                        </Grid>
                                        <!--#endregion-->

                                    </StackLayout>
                                </xctv:TabViewItem>

                                <xctv:TabViewItem Text="Date">
                                    <StackLayout>
                                        <!--#region DateTime Picker-->
                                        <Grid>
                                            <StackLayout
                                                Grid.Row="0"
                                                Grid.RowSpan="2"
                                                Grid.Column="0"
                                                Grid.ColumnSpan="2"
                                                VerticalOptions="Center">
                                                <Label
                                                    x:Name="lblSelectedDate"
                                                    FontSize="Medium"
                                                    HorizontalOptions="Center"
                                                    TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                                    VerticalTextAlignment="Center">
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="00.00.0000" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                                <Label
                                                    x:Name="lblSelectedTime"
                                                    FontSize="Medium"
                                                    HorizontalOptions="Center"
                                                    TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                                    VerticalTextAlignment="Center">
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="00.00 AM" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                            </StackLayout>
                                            <Frame
                                                Grid.Row="2"
                                                Grid.Column="0"
                                                Margin="10"
                                                Padding="10"
                                                BackgroundColor="{x:Static helpers:ThemeColors.BorderBackColor}"
                                                BorderColor="{x:Static helpers:ThemeColors.BorderColor}"
                                                CornerRadius="15"
                                                HorizontalOptions="Fill">
                                                <Label
                                                    FontSize="Small"
                                                    HorizontalOptions="Center"
                                                    TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                                    VerticalTextAlignment="Center">
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="Select Date" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                                <Frame.GestureRecognizers>
                                                    <TapGestureRecognizer Tapped="DateButton_Clicked" />
                                                </Frame.GestureRecognizers>
                                            </Frame>
                                            <Frame
                                                Grid.Row="2"
                                                Grid.Column="1"
                                                Margin="10"
                                                Padding="10"
                                                BackgroundColor="{x:Static helpers:ThemeColors.BorderBackColor}"
                                                BorderColor="{x:Static helpers:ThemeColors.BorderColor}"
                                                CornerRadius="15"
                                                HorizontalOptions="Fill">
                                                <Label
                                                    FontSize="Small"
                                                    HorizontalOptions="Center"
                                                    TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                                    VerticalTextAlignment="Center">
                                                    <Label.FormattedText>
                                                        <FormattedString>
                                                            <Span Text="Select Time" />
                                                        </FormattedString>
                                                    </Label.FormattedText>
                                                </Label>
                                                <Frame.GestureRecognizers>
                                                    <TapGestureRecognizer Tapped="TimeButton_Clicked" />
                                                </Frame.GestureRecognizers>
                                            </Frame>
                                        </Grid>
                                        <!--#endregion-->

                                    </StackLayout>
                                </xctv:TabViewItem>
                            </xctv:TabView>
                        </StackLayout>
                    </Frame>

                    <!--#region Format And Timeframe-->
                    <!--<StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                        <Frame
                            Padding="0,5"
                            BackgroundColor="{x:Static helpers:ThemeColors.BorderBackColor}"
                            BorderColor="{x:Static helpers:ThemeColors.BorderColor}"
                            CornerRadius="15">
                            <custom:BorderlessPicker
                                x:Name="pickerTimeFrame"
                                Title="TimeFrame"
                                FontSize="Small"
                                HorizontalTextAlignment="Center"
                                SelectedIndexChanged="pickerTimeFrame_SelectedIndexChanged"
                                TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                TitleColor="{x:Static helpers:ThemeColors.TextColor}"
                                VerticalTextAlignment="Center"
                                WidthRequest="150">
                                <Picker.Items>
                                    <x:String>Timer</x:String>
                                    <x:String>Date</x:String>
                                </Picker.Items>
                            </custom:BorderlessPicker>
                        </Frame>
                    </StackLayout>-->
                    <!--#endregion-->

                    <!--#region preview Image-->
                    <StackLayout Margin="5,10">
                        <Frame
                            Padding="0"
                            BackgroundColor="Transparent"
                            CornerRadius="15"
                            HorizontalOptions="Center">
                            <Image x:Name="imageFormat" Source="Relative" />
                        </Frame>
                    </StackLayout>
                    <!--#endregion-->

                    <!--#region Export-->
                    <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                        <Frame
                            Padding="20,13"
                            BackgroundColor="{x:Static helpers:ThemeColors.BorderBackColor}"
                            BorderColor="{x:Static helpers:ThemeColors.BorderColor}"
                            CornerRadius="15">
                            <custom:BorderlessPicker
                                x:Name="pickerFormat"
                                Title="Format"
                                Margin="-5,-5,-5,-5"
                                FontSize="Caption"
                                HorizontalTextAlignment="Center"
                                SelectedIndexChanged="pickerFormat_SelectedIndexChanged"
                                TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                TitleColor="{x:Static helpers:ThemeColors.TextColor}"
                                VerticalTextAlignment="Center">
                                <Picker.Items>
                                    <x:String>Relative</x:String>
                                    <x:String>Time</x:String>
                                    <x:String>Long Time</x:String>
                                    <x:String>Date</x:String>
                                    <x:String>Long Date</x:String>
                                    <x:String>Date Time</x:String>
                                    <x:String>Date Weekday</x:String>
                                </Picker.Items>
                            </custom:BorderlessPicker>
                        </Frame>
                        <Frame
                            Padding="20,13"
                            xct:TouchEffect.NativeAnimation="true"
                            xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                            xct:TouchEffect.PressedAnimationDuration="500"
                            xct:TouchEffect.PressedOpacity="0.6"
                            xct:TouchEffect.PressedScale="0.98"
                            BackgroundColor="{x:Static helpers:ThemeColors.BorderBackColor}"
                            BorderColor="{x:Static helpers:ThemeColors.BorderColor}"
                            CornerRadius="15"
                            HorizontalOptions="Center">
                            <Label
                                FontSize="Caption"
                                HorizontalOptions="Center"
                                TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                VerticalTextAlignment="Center">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding TimestampText}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="btnCopyTimestamp_Clicked" />
                            </Frame.GestureRecognizers>
                        </Frame>
                        <Frame
                            x:Name="btnCopyTimestamp"
                            Padding="20,13"
                            xct:TouchEffect.NativeAnimation="true"
                            xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                            xct:TouchEffect.PressedAnimationDuration="500"
                            xct:TouchEffect.PressedOpacity="0.6"
                            xct:TouchEffect.PressedScale="0.98"
                            BackgroundColor="{x:Static helpers:ThemeColors.BorderBackColor}"
                            BorderColor="{x:Static helpers:ThemeColors.BorderColor}"
                            CornerRadius="15"
                            HorizontalOptions="Center">
                            <Label
                                FontSize="Caption"
                                HorizontalOptions="Center"
                                Text="Copy"
                                TextColor="{x:Static helpers:ThemeColors.TextColor}"
                                VerticalOptions="Center" />
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="btnCopyTimestamp_Clicked" />
                            </Frame.GestureRecognizers>
                        </Frame>
                    </StackLayout>
                    <!--#endregion-->

                </StackLayout>
                <Button
                    x:Name="btnTest"
                    Clicked="btnTest_Clicked"
                    HorizontalOptions="Center"
                    IsVisible="false"
                    Text="test"
                    VerticalOptions="End" />
            </Grid>
            <custom:CustomAdsView
                x:Name="adsBottom"
                AdsId="ca-app-pub-3881259676793306/4300337854"
                AutomationId="adsBottom"
                HeightRequest="{OnIdiom Phone=50,
                                        Tablet=90}"
                VerticalOptions="End" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>